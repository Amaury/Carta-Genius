<?xml version="1.0"?>
<pandocreon:carta-genius>
	<templates>
		<template id="gabarit">
			<if test="$CARD_INDEX = 1">
				<circle x="3cm" y="5cm" radius="20mm" fill-color="#0000ff"/>
			</if>
			<if test="eq($CARD_INDEX, 2)">
				<box x="2cm" y="3cm" width="3cm" height="3cm" fill-color="#00ff00"/>
			</if>
		</template>
	</templates>
	<deck>
		<paper type="a4" margin="2cm"/>
		<cardsize type="a7"/>
		<card template="gabarit"/>
		<card template="gabarit"/>
	</deck>
</pandocreon:carta-genius>
